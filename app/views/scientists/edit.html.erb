<% if @scientist.errors %>
    <% @scientist.errors.full_messages.each do |message| %>
    <span class="error">** <%= message %>**</span><BR>
<% end %>

<% end %>

<%= form_for @scientist do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %><br>
    </div>
    <br>
    <div>
        <%= f.label :field_of_study %>
        <%= f.text_field :field_of_study %><br>
    </div>
    <br>
    <%= f.submit %>
<% end %>
